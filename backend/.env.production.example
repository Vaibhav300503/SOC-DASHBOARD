# Production Environment Configuration
# Copy this to .env.production and fill with actual values

# Server Configuration
NODE_ENV=production
PORT=3001
FORCE_HTTPS=true

# MongoDB Configuration (Use MongoDB Atlas or secured MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/soc_logs?retryWrites=true&w=majority

# Frontend Configuration (Must be HTTPS in production)
FRONTEND_URL=https://your-secured-domain.com

# JWT Configuration (Generate secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secure-jwt-secret-at-least-64-characters-long
JWT_EXPIRES_IN=24h

# Tailscale Configuration (Generate from Tailscale Admin Console)
TAILSCALE_API_KEY=tskey-api-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TAILSCALE_TAILNET=your-tailnet-name

# Redis Configuration (For distributed locking)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Rate Limiting (Stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=warn

# Security Headers
HELMET_CSP_DIRECTIVE=default-src 'self'

# CORS Origins (Comma-separated list)
CORS_ORIGINS=https://your-secured-domain.com,https://admin.your-domain.com

# Session Configuration
SESSION_SECRET=another-super-secure-secret-for-sessions

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
